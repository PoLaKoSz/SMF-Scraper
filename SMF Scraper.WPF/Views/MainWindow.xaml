<Window x:Class="SMF_Scraper.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="450"
        Width="800"
        xmlns:models="clr-namespace:SMF_Scraper.WPF.Models"
        xmlns:userControls="clr-namespace:SMF_Scraper.WPF.Views.Controls"
        WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TreeView HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ItemsSource="{Binding Categories}">
            <TreeView.ItemContainerStyle>
                <Style TargetType="{x:Type TreeViewItem}">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type models:Category}" ItemsSource="{Binding Boards}">
                    <userControls:TreeViewItemDesign/>
                </HierarchicalDataTemplate>
                
                <HierarchicalDataTemplate DataType="{x:Type models:Board}"
                                          ItemsSource="{Binding Path=AllNodes}">
                    <userControls:TreeViewItemDesign/>
                </HierarchicalDataTemplate>

                <HierarchicalDataTemplate DataType="{x:Type models:Topic}"
                                          ItemsSource = "{Binding Path=Messages}">
                    <userControls:TreeViewItemDesign/>
                </HierarchicalDataTemplate>

                <DataTemplate DataType="{x:Type models:Message}">
                    <userControls:TreeViewItemDesign/>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </StackPanel>
</Window>
